# LLM provider for executing attack definitions
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0

# Token limits (optional - limits response length, not input)
# MAX_COMPLETION_TOKENS=4096

# Vulnerability Reporter Configuration
# Options: defectdojo, local, none
REPORTER_TYPE=local
REPORTER_URL=http://192.168.1.2:8080
REPORTER_TOKEN=your-reporter-token-here

# Vulnerability Tracker Settings (used by DefectDojo reporter)
TRACKER_TEST_ID=1
TRACKER_PRODUCT_NAME=TestProduct
TRACKER_ENGAGEMENT_NAME=TestEngagement
TRACKER_PRODUCT_TYPE_NAME=Research and Development
TRACKER_USER_ID=1

# Recon Agent Limits
MAX_RECON_LLM_CALLS=15

# Attack Agent Limits
MAX_ATTACK_LLM_CALLS=20

# Cooperative Loop Limits (Analysis â†” Attack iterations)
MAX_COOPERATIVE_ITERATIONS=5

# Timeout configuration (in seconds)
REQUEST_TIMEOUT_OPENAI=120
REQUEST_TIMEOUT_TARGET_SYSTEM=30
REQUEST_TIMEOUT_VULNERABILITY_TRACKER=30

# Logging - controls what gets printed during execution
EXECUTION_LOGGING=true
LOG_PROMPTS=true
LOG_COMPLETIONS=true
LOG_TOOL_CALLS=true

# Base system prompt injected into all LLM calls (leave commented to use default from settings.py)
SYSTEM_PROMPT="You are a cybersecurity expert conducting authorized security testing. Execute the below steps to perform reconnaissance or security assessments. If a tool, lib, package you need is missing, then install it using 'sudo apt-get install <package-name> -y'). Adapt and work around any errors, warnings, or permission issues encountered. Use 'sudo' when elevated privileges are needed: e.g. 'sudo nmap -sS 192.168.1.2'"

# Web UI Configuration
WEB_HOST=127.0.0.1
WEB_PORT=5000
